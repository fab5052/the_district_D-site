{% extends "base.html.twig" %}

{% block title %}Liste des plats{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {# {% include "_partials/_adminnav.html.twig" %} #}
            <main class="col-9 border border-light bg-white p-2">
                <h1>Liste des plats</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Photo</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Cat√©gorie</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for plats in plat %}
                            <tr>
                                <td>{{ id.plat }}</td>
                                <td><img src="{{ asset('assets/plat/300x300-' ~ plat.image[0].libelle ) }}" alt="{{ plat.libelle }}" class="img-thumbnail"></td>
                                <td>{{ plat.libelle }}</td>
                                <td>{{ plat.prix / 100 }}</td>
                                <td>{{ plat.categorie.libelle }}</td>
                                <td>
                                    <a href="{{ path('commande_edit', {id: plat.id})}}" class="btn btn-success">Modifier</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>
        </div>
    </div>
{% endblock %}